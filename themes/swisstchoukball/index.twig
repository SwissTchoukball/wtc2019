<!DOCTYPE html>
<html class="no-js"{% if meta.lang %} lang="{{ meta.lang }}"{% endif %}>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{% if meta.lang == 'de' %}Tchoukball-Weltmeisterschaften 2019{% else %}{{ site_title }}{% endif %}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    <link rel="stylesheet" href="{{ theme_url }}/css/style.css?v=4" type="text/css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,800&display=swap">
    <link rel="stylesheet" href="{{ theme_url }}/css/fontello.css" type="text/css" />
    <!-- Matomo -->
    <script type="text/javascript">
      var _paq = window._paq || [];
      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//analytics.tchoukball.ch/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '1']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
    <!-- End Matomo Code -->
</head>
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>

    <header class="st-header">
	    <div class="st-container">
	        <a id="nav-toggle" class="st-nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false" tabindex="1">
	            <span class="icon-menu" aria-hidden="true"></span>
	            <span class="sr-only">Toggle Menu</span>
	        </a>
	        <h1>
	            <a href="{{ "index"|link }}">{% if meta.lang == 'de' %}Tchoukball-Weltmeisterschaften 2019{% else %}{{ site_title }}{% endif %}</a>
	        </h1>
	        <div class="st-header__logos">
		        <img src="{{ theme_url }}/images/logo_swisstchoukball.svg" alt="Logo de Swiss Tchoukball" class="st-header__logo"/>
		        <img src="{{ theme_url }}/images/logo_wtc2019.png" alt="Logo des WTC 2019" class="st-header__logo"/>
		        <img src="{{ theme_url }}/images/logo_wytc2019.png" alt="Logo des WYTC 2019" class="st-header__logo"/>
	        </div>
	        <nav id="nav" class="st-main-nav" role="region" tabindex="-1">
    	        <ul>
        	        {% for menuitem in pages._meta.meta.menufr if meta.lang == 'fr' %}
                        <li>
                            <a href="{{ menuitem.path }}">{{ menuitem.title }}</a>
                        </li>
	                {% endfor %}
        	        {% for menuitem in pages._meta.meta.menude if meta.lang == 'de' %}
                        <li>
                            <a href="{{ menuitem.path }}">{{ menuitem.title }}</a>
                        </li>
	                {% endfor %}
    	        </ul>
<!--
	            <ul>
	                {% for page in pages if page.title and not page.hidden %}
	                    {% set pageDepth = page.id|split('/')|length %}
	                    {% if (pageDepth == 2) and (page.id ends with "/index") or (pageDepth == 1) %}
	                        <li{% if page.id == current_page.id %} class="active"{% endif %}>
	                            <a href="{{ page.url }}">{{ page.title }}</a>
	                        </li>
	                    {% endif %}
	                {% endfor %}
	            </ul>
-->
	        </nav>
        </div>
    </header>

    <main class="st-main">
	    <div class="st-container">
	        {{ content }}
	    </div>
    </main>

    <footer class="st-footer">
	    <div class="st-container">
		    <div class="st-footer__partners">
    		        <span class="st-footer__partner">Nos partenaires:</span>
		        {% for partner in pages._meta.meta.partners %}
		            <a href="{{ partner.url }}" title="{{ partner.name }}" class="st-footer__partner">
						<img src="{{ theme_url }}/images/{{ partner.image }}" alt="Logo de {{ partner.name }}">
		            </a>
		        {% endfor %}
		    </div>
		    <div class="social">
		        {% for social in pages._meta.meta.social %}
		            <a href="{{ social.url }}" title="{{ social.title }}" role="button">
		                <span class="icon-{{ social.icon }}" aria-hidden="true"></span>
		                <span class="sr-only">{{ social.title }}</span>
		            </a>
		        {% endfor %}
		    </div>
		    <p>
		        &copy; Copyright 2019 <a href="https://tchoukball.ch/">Swiss Tchoukball</a>
		    </p>
	    </div>
    </footer>

    <script src="{{ theme_url }}/js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/pico.js" type="text/javascript"></script>
    <script id="dsq-count-scr" src="//wtc2019.disqus.com/count.js" async></script>

</body>
</html>
